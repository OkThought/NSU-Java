<?xml version="1.0" encoding="UTF-8" ?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[$${date:HH:mm:ss.SSS}] [%-5level]:\t%msg%n"/>
            <!--<PatternLayout pattern="[$${date:HH:mm:ss.SSS}] [%thread] [%-5level]:\t%msg%n"/>-->
        </Console>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>